body
  text: $secondary-dark 400 14px 1.5 @md 16px
  font-family: $ff

.brand-name
  font-family: 'Montserrat'
  text: $secondary-dark 30px * 700
  text-transform: uppercase
  letter-spacing: 0.1em

  &__letter
    text: #b79569 36px

.h1
  display: block
  text: 800 37px 48px
  line-height: @md-down 29px

.h2
  text: 600 21px 1.3 @md 23px @lg 28px

.link
  text-decoration: none

  &:hover
    text-decoration: underline